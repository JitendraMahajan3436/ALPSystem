@*@model REIN_MES_System.Models.MM_Documents*@
@{
    ViewBag.Title = "getview2";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<div class="form-group">

    @Html.ActionLink("Back to List", "ViewDocument")
    <div class="col-md-12">
@if (Model.Doc_Content != null)
{
    var base64imag = Convert.ToBase64String(Model.Doc_Content);
    var imgsrcing = "";
    if (Model.Content_Type == "image/jpeg" || Model.Content_Type == "image/png" || Model.Content_Type == "image/gif" || Model.Content_Type == "image/jpg")
    {
        imgsrcing = string.Format("data:image/gif;base64,{0}", base64imag);

    }
    else
    {
        imgsrcing = string.Format("data:application/pdf;base64,{0}", base64imag);

    }
        <iframe id="contentframe" style="border:1px solid#666ccc" title="pdf in i-Frame" src="@imgsrcing" frameborder="1" scrolling="auto" width="100%" height="400px"></iframe>
    }
        <input type="hidden" id="hdnDocumentName" value="@ViewBag.DocumentName" />
    </div>

</div>
@section scripts {
    @Scripts.Render("~/Content/theme/plugins/datatables/js")
    @Styles.Render("~/Content/theme/plugins/datatables/css")
    @Scripts.Render("~/Scripts/user_datatable")
}

