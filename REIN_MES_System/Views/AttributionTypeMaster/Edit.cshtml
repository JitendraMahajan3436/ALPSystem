                    @Html.DropDownList("Sub_Assembly_ID", null, string.Empty, new { onchange = "", @class = "form-control", disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.Sub_Assembly_ID, null, new { @class = "validation_error" })
                    @Html.HiddenFor(model => model.Sub_Assembly_ID)
