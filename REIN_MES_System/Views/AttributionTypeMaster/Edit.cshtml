                    @Html.TextBoxFor(model => model.Attribution_Type, new { onchange = "", @class = "form-control" ,disabled="disabled" })
                    @Html.ValidationMessageFor(model => model.Attribution_Type)
                    @Html.HiddenFor(model => model.Attribution_Type)
                </div>

                <div class="col-md-3">
                    @Html.Label("ToolBox Used", htmlAttributes: new { @class = "" })<i style="color:red">*</i>

                    @* @Html.TextBoxFor(model => model.ToolBox, new { onchange = "", @class = "form-control" })*@
