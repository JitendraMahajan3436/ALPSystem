@model REIN_MES_System.Models.RS_Major_Sub_Assembly
@using REIN_MES_System.App_LocalResources;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}


<div class="col-md-12 col-sm-12 col-lg-12">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.Sub_Assembly_ID)

            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Sub_Assembly_Name, ResourceDisplayName.Sub_Assembly_Name, htmlAttributes: new { @class = "" })<i style="color:red">*</i>
                    @Html.TextBoxFor(model => model.Sub_Assembly_Name, htmlAttributes : new { @class = "form-control", maxlength = "50" } )
                    @Html.ValidationMessageFor(model => model.Sub_Assembly_Name, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4" style="display:none">
                    @Html.LabelFor(model => model.Inserted_Date,  htmlAttributes: new { @class = "" })
                    @Html.TextBoxFor(model => model.Inserted_Date, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Inserted_Date, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4" style="display:none">
                    @Html.LabelFor(model => model.Inserted_Host,  htmlAttributes: new { @class = "" })
                    @Html.TextBoxFor(model => model.Inserted_Host, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Inserted_Host, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4" style="display:none">
                    @Html.LabelFor(model => model.Inserted_User_ID,  htmlAttributes: new { @class = "" })
                    @Html.TextBoxFor(model => model.Inserted_User_ID, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Inserted_User_ID, "", new { @class = "text-danger" })
                </div>

            </div>
            <br />
            <div class="row">
                <div class="col-md-offset-0 col-sm-offset-0 col-lg-offset-0 col-md-10 col-sm-10 col-lg-10">
                    <input type="submit" value="@ResourceGlobal.Save" class="btn btn-success" />
                    @Html.ActionLink(ResourceGlobal.Show_All, "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
