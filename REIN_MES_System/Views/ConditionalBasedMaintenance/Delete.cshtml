            @Html.DisplayFor(model => model.Machine_ID)
        </dd>
        <dt>
            @Html.DisplayName("Machine Name")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MM_MT_MTTUW_Machines.Machine_Name)
        </dd>
        <dt>
            @Html.DisplayName("Machine Parameter")
