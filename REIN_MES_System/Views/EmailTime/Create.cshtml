@model REIN_MES_System.Models.MM_MT_Email_Time_Configuration

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">

        @Html.ValidationSummary(true)
        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.M_ID, "Maintenance Type", htmlAttributes: new { @class = "" })
                @Html.DropDownListFor(model => model.M_ID,(IEnumerable<SelectListItem>)ViewBag.M_ID,"--Select Type--", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.M_ID)

            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Day_Frequency,"Day", htmlAttributes: new { @class = "" })
                @Html.TextBoxFor(model => model.Day_Frequency, new { @class = "form-control" ,@placeholder="1 day before e.g today 0" })
                @Html.ValidationMessageFor(model => model.Day_Frequency)
            </div>
           
        </div>
       

        <div class="col-md-12">
            <div class="row">
                <input type="submit" value="Create" class="btn btn-primary" /> @Html.ActionLink("Show All", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}

