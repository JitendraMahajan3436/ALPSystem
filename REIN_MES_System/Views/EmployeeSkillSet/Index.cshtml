@model IEnumerable<REIN_MES_System.Models.RS_AM_Employee_SkillSet>
@using REIN_MES_System.App_LocalResources;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}



<p class="position_absolute">
    <a href="@Url.Action("Create", "EmployeeSkillSet")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-plus-circle"></i> @ResourceGlobal.Create_New</a>
</p>
<table class="table table-bordered table-striped datatable_completes">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayName("Shop Name")
            </th>
            <th>
                @Html.DisplayName("Line Name")
            </th>
            <th>
                @Html.DisplayName("Station Name")
            </th>
            <th>
                @Html.DisplayName("Employee Name")
            </th>
            <th>
                @Html.DisplayName("Skill Set")
            </th>


            @*<th>
                    @Html.DisplayNameFor(model => model.RS_Plants.Plant_Name)
                </th>*@


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.RS_Shops.Shop_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RS_Lines.Line_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RS_Stations.Station_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RS_Employee.Employee_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RS_AM_Skill_Set.Skill_Set)
                </td>


                @*<td>
                        @Html.DisplayFor(modelItem => item.RS_Plants.Plant_Name)
                    </td>*@


                <td>
                    <a href="@Url.Action("Edit", "EmployeeSkillSet", new { id = item.EmployeeSkill_Id })"><i class="fa fa-edit"></i></a> &nbsp;&nbsp;
                    <a href="@Url.Action("Details", "EmployeeSkillSet", new { id = item.EmployeeSkill_Id })"><i class="fa fa-fw fa-laptop"></i></a> &nbsp;&nbsp;
                    <a href="@Url.Action("Delete", "EmployeeSkillSet", new { id = item.EmployeeSkill_Id })"><i class="fa fa-trash"></i></a>

                    @*@Html.ActionLink("Edit", "Edit", new { id = item.EmployeeSkill_Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.EmployeeSkill_Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeSkill_Id })*@
                </td>
            </tr>
        }
    </tbody>
    @section scripts {
        @Scripts.Render("~/Content/theme/plugins/datatables/js")
        @Styles.Render("~/Content/theme/plugins/datatables/css")
        @Scripts.Render("~/Scripts/user_datatable")
    }
</table>
