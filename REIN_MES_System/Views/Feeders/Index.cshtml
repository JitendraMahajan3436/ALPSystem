@model IEnumerable<REIN_MES_System.Models.RS_Feeders>


@{
    ViewBag.Title = "ShopwiseRpt";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<div class="box">
    <div class="box-header">
        <p class="position_absolute">
            <a href="@Url.Action("Create", "Feeders")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-plus-circle"></i> Create New</a>

        </p>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped datatable_completes">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MM_MTTUW_Shops.Shop_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FeederName)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MM_MTTUW_Shops.Shop_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FeederName)
                        </td>


                        <td>
                            <a style="color:dodgerblue" href="@Url.Action("Edit", "Feeders", new { id = item.Feeder_ID})"><i class="fa fa-edit" title="Edit"></i></a> &nbsp;|

                            <a style="color:dodgerblue" data-target="#@item.Feeder_ID" data-toggle="modal" data-id="@item.Feeder_ID" onclick="deleteStart(this)"><i class="fa fa-trash-o" title="Delete"></i></a>

                            @using (Html.BeginForm("Delete", "Feeders", new { id = item.Feeder_ID }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="modal fade" id="@item.Feeder_ID" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                                <h4 class="modal-title">Delete Confirmation</h4>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete this item?
                                            </div>
                                            <div class="modal-footer">
                                                <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                                                <input type="submit" value="Delete" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/Content/theme/plugins/datatables/js")
    @Styles.Render("~/Content/theme/plugins/datatables/css")
    @*@Styles.Render("~/Scripts/user_datatable")*@
    <script src="~/Scripts/user_datatable.js"></script>
}

