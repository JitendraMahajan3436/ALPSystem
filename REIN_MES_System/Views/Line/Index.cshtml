@model IEnumerable<REIN_MES_System.Models.RS_Lines>
@using REIN_MES_System.App_LocalResources;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<p class="position_absolute">
    @*@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })*@
    <a href="@Url.Action("Create", "Line")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-plus-circle"></i> @ResourceGlobal.Create_New</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped datatable_completes">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model=>model.Line_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.Line_Description)
                </th>


                <th>
                    @Html.DisplayNameFor(model=>model.Shop_ID)
                </th>

                <th>
                    @Html.DisplayName(ResourceGlobal.Inserted_Date)
                </th>

                <th>@ResourceGlobal.Action</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Line_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Line_Description)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.RS_Shops.Shop_Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Inserted_Date)
                </td>

                <td>
                    <a href="@Url.Action(ResourceGlobal.Edit, "Line", new { id = item.Line_ID })"><i class="fa fa-edit" title="Edit" style="color:blue"></i></a>
                    <a href="@Url.Action(ResourceGlobal.Details, "Line", new { id = item.Line_ID })"><i class="fa fa-fw fa-laptop" title="Details" style="color:blueviolet"></i></a>
                    <a href="@Url.Action(ResourceGlobal.Delete, "Line", new { id = item.Line_ID })"><i class="fa fa-trash" title="Delete" style="color:red"></i></a>

                </td>
            </tr>
        }

    </table>
</div>
@section scripts {
    @Scripts.Render("~/Content/theme/plugins/datatables/js")
    @Styles.Render("~/Content/theme/plugins/datatables/css")
    @Scripts.Render("~/Scripts/user_datatable")
}
