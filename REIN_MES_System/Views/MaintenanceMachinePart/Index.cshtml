@model IEnumerable<REIN_MES_System.Models.RS_Maintenance_Machine_Part>
@using REIN_MES_System.App_LocalResources;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<p class="table-responsive">
    <a href="@Url.Action("Create", "MaintenanceMachinePart")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-plus-circle"></i> @ResourceGlobal.Create_New</a>
</p>
<table class="table table-bordered table-striped datatable_completes">
   
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plant_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shop_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Line_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Station_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RS_Maintenance_Part.Part_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Machine_ID)
            </th>
            <th>
                @ResourceGlobal.Action
            </th>
        </tr>
    </thead> 
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RS_Plants.Plant_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RS_Shops.Shop_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RS_Lines.Line_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RS_Stations.Station_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RS_Maintenance_Part.Part_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RS_MT_Machines.Machine_Name)
            </td>

            <td>
                <a href="@Url.Action("Edit", "MaintenanceMachinePart", new { id = item.Machine_Part_ID })"><i class="fa fa-edit" title="Edit"></i></a> &nbsp;&nbsp;
                <a href="@Url.Action("Details", "MaintenanceMachinePart", new { id = item.Machine_Part_ID })"><i class="fa fa-fw fa-laptop" title="Details"></i></a> &nbsp;&nbsp;
                <a href="@Url.Action("Delete", "MaintenanceMachinePart", new { id = item.Machine_Part_ID })"><i class="fa fa-trash" title="Delete"></i></a>
            </td>
        </tr>
    }

</table>

