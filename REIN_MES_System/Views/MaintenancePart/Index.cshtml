@model IEnumerable<REIN_MES_System.Models.RS_Maintenance_Part>
@using REIN_MES_System.App_LocalResources;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<p class="position_absolute">
    <a href="@Url.Action("Create", "MaintenancePart")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-plus-circle"></i> @ResourceGlobal.Create_New</a>
    @*<a href="@Url.Action("ExcelUpload", "MaintenancePart")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-upload"></i> @ResourceGlobal.Upload</a>*@ 
</p>
<div class="table-responsive no-border">
    <table class="table table-bordered table-striped datatable_completes">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Part Name")
                </th>
                <th>
                    @Html.DisplayName("Part Description")
                </th>

                @*<th>
                        @Html.DisplayNameFor(model => model.Qty)
                    </th>*@
                <th>
                    @ResourceGlobal.Action
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Part_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Part_Desscription)
                </td>

                @*<td>
                        @Html.DisplayFor(modelItem => item.Qty)
                    </td>*@
                <td>
                    <a href="@Url.Action("Edit", "MaintenancePart", new { id = item.Maintenance_Part_ID })"><i class="fa fa-edit" title="Edit" style="color:blue"></i></a>
                    <a href="@Url.Action("Details", "MaintenancePart", new { id = item.Maintenance_Part_ID })"><i class="fa fa-fw fa-laptop" title="Details" style="color:blueviolet"></i></a>
                    <a href="@Url.Action("Delete", "MaintenancePart", new { id = item.Maintenance_Part_ID })"><i class="fa fa-trash" title="Delete" style="color:red"></i></a>

                </td>
            </tr>
        }

    </table>
</div>
@section scripts {
    @Scripts.Render("~/Content/theme/plugins/datatables/js")
    @Styles.Render("~/Content/theme/plugins/datatables/css")
    @Scripts.Render("~/Scripts/user_datatable")
}

