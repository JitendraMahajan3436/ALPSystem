@model REIN_MES_System.Models.RS_Menus

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.LinkName, new { @class = "" })<i style="color:red">*</i>
                    @Html.TextBoxFor(model => model.LinkName, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LinkName)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ActionName, new { @class = "" })<i style="color:red">*</i>
                    @Html.TextBoxFor(model => model.ActionName, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ActionName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ControllerName, new { @class = "" })<i style="color:red">*</i>
                    @Html.TextBoxFor(model => model.ControllerName, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ControllerName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Sort_Order, "Sort Order", new { @class = "" })<i style="color:red">*</i>
                    @Html.TextBoxFor(model => model.Sort_Order, null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Sort_Order, null, new { @class = "validation_error" })
                </div>
                <div class="form-group">

                    <input type="submit" value="Save" class="btn btn-primary" /> @Html.ActionLink("Show All", "Index", null, new { @class = "btn btn-primary" })

                </div>
            </div>
        }
    </div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}