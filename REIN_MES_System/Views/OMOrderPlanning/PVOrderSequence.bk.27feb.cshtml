                                                    {
                                                        pfname = pf.Platform_Name
                                                    }).FirstOrDefault();


                                <td class="sequence-platformName">
                                    @platformName.pfname
                                </td>
                            }
                        }
                        @{
                            var colorCode = item.Color_code;
                            var colorName = db.RS_Colour.Where(m => m.Colour_ID == colorCode).Select(m => m.Colour_Desc).FirstOrDefault();
