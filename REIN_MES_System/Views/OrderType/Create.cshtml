<script>
    $(document).ready(function () {
        debugger;
        $("#add_OrderType").validate({
            ignore: [],
            rules: {
                Shop_ID: "required",
                Order_Type_Name: "required",
                Order_Type_Code: "required",
            }
        });
        document.getElementById('serialNo').style.display = "none";

    $('#Is_Serial_No_Generation').change(function () {
        if ($('#Is_Serial_No_Generation').prop("checked")) {
            document.getElementById('serialNo').style.display = "block";
            $('#Is_Tear_Down_Body_Serial_No').prop("checked", false);
            $('#Is_Trial_Body_Serial_No').prop("checked", false);
            //document.getElementById('Is_Trial_Body_Serial_No').checked = false;
            //document.getElementById('Is_Trial_Body_Serial_No').value = false;
            //document.getElementById('Is_Tear_Down_Body_Serial_No').checked = false;
            //document.getElementById('Is_Tear_Down_Body_Serial_No').value = false;
        }
        else {
            $('#Is_Tear_Down_Body_Serial_No').prop("checked", false);
            $('#Is_Trial_Body_Serial_No').prop("checked", false);
            //document.getElementById('Is_Trial_Body_Serial_No').checked = false;
            //document.getElementById('Is_Trial_Body_Serial_No').value = false;
            //document.getElementById('Is_Tear_Down_Body_Serial_No').checked = false;
            //document.getElementById('Is_Tear_Down_Body_Serial_No').value = false;
            document.getElementById('serialNo').style.display = "none";
        }
    });
    $("#Is_Trial_Body_Serial_No").on('change', function (e) {
        $('#Is_Tear_Down_Body_Serial_No').prop("checked", false);
        document.getElementById('Is_Tear_Down_Body_Serial_No').checked = false;
        document.getElementById('Is_Tear_Down_Body_Serial_No').value = false;
    });
    $("#Is_Tear_Down_Body_Serial_No").on('change', function (e) {
        $('#Is_Trial_Body_Serial_No').prop("checked", false);
        document.getElementById('Is_Trial_Body_Serial_No').checked = false;
        document.getElementById('Is_Trial_Body_Serial_No').value = false;
    });
    $("#submitBtn").on('click', function (e) {
    });
    });
</script>
