@model IEnumerable<REIN_MES_System.Models.RS_OM_Order_Type>
@using REIN_MES_System.App_LocalResources;
@using REIN_MES_System.custom_Helper;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<p class="position_absolute">
    <a href="@Url.Action("Create", "OrderType")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-plus-circle"></i> @ResourceGlobal.Create_New</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped datatable_completes">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RS_Shops.Shop_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order_Type_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order_Type_Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Is_Serial_No_Generation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Is_Build_Sheet_Print)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Is_Production_Booking)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Is_Spare)
                </th>
                <th>@ResourceGlobal.Action</th>
            </tr>
        </thead>
        @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RS_Shops.Shop_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_Type_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_Type_Code)
                </td>
                <td>
                    @Html.YesNo(item.Is_Serial_No_Generation)
                </td>
                <td>
                    @Html.YesNo(item.Is_Build_Sheet_Print)
                </td>
                <td>
                    @Html.YesNo(item.Is_Production_Booking)
                </td>
                <td>
                    @Html.YesNo(item.Is_Spare)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "OrderType", new { id = item.Order_Type_ID })"><i class="fa fa-edit" style="color:blue" title="Edit"></i></a>
                    <a href="@Url.Action("Details", "OrderType", new { id = item.Order_Type_ID })"><i class="fa fa-fw fa-laptop" style="color:blueviolet" title="Details"></i></a>
                    <a href="@Url.Action("Delete", "OrderType", new { id = item.Order_Type_ID })"><i class="fa fa-trash" style="color:red" title="Delete"></i></a>

                </td>
            </tr>
    }

    </table>
</div>
@section scripts {
    @Scripts.Render("~/Content/theme/plugins/datatables/js")
    @Styles.Render("~/Content/theme/plugins/datatables/css")
    @Scripts.Render("~/Scripts/user_datatable")
}