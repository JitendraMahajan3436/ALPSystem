@model IEnumerable<REIN_MES_System.Models.MM_Parameter>

@{

    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<div class="box">
    <div class="box-header">
        <p class="position_absolute">
            <a href="@Url.Action("Create", "ParameterMaster")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-plus-circle"></i> Create New</a>

        </p>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped datatable_completes">
            <thead>
                <tr>

                    
                    <th>
                        Prameter Name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>

                    <th>Action</th>
                </tr>
            </thead>
           

            @foreach (var item in Model)
            {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Prameter_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Prameter_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Prameter_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Prameter_ID })
                </td>*@
                <td>

                    <a style="color:dodgerblue" href="@Url.Action("Edit", "ParameterMaster", new { id = item.Prameter_ID})"><i class="fa fa-edit" title="Edit"></i></a> &nbsp;|

                    <a style="color:dodgerblue" data-target="#@item.Prameter_ID" data-toggle="modal" data-id="@item.Prameter_ID" onclick="deleteStart(this)"><i class="fa fa-trash-o" title="Delete"></i></a>
                    @using (Html.BeginForm("DeleteConfirmed", "ParameterMaster", new { id = item.Prameter_ID }))
        {
            @Html.AntiForgeryToken()
            <div class="modal fade" id="@item.Prameter_ID" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title">Delete Confirmation</h4>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this item?
                        </div>
                        <div class="modal-footer">
                            <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                            <input type="submit" value="Delete" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
                </td>
            </tr>
        }

        </table>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/Content/theme/plugins/datatables/js")
    @Styles.Render("~/Content/theme/plugins/datatables/css")
    <script src="~/Scripts/user_datatable.js"></script>


}

