@model IEnumerable<REIN_MES_System.Models.RS_Partgroup>
@using REIN_MES_System.App_LocalResources;
@using REIN_MES_System.custom_Helper;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

@*<p>
    @Html.ActionLink("Create New", "Create",null,htmlAttributes:new{@class="btn btn-primary"})
</p>*@
<p class="position_absolute">

    <a href="@Url.Action("Create", "PartGroup")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-plus-circle"></i> @ResourceGlobal.Create_New</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped datatable_completes">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model=>model.Shop_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.Line_ID)
                </th>


                <th>
                    @Html.DisplayNameFor(model=>model.Partgrup_Desc)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.Order_Create)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Consumption_Line_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Consumption_Station_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Partgroup_Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Qty)
                </th>
                
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RS_Shops.Shop_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RS_Lines.Line_Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Partgrup_Desc)
                    </td>
                    <td>

                        @Html.YesNo(item.Order_Create)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RS_Lines1.Line_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RS_Stations.Station_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Partgroup_Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Qty)
                    </td>
                    @*<td>
                            @Html.YesNo(Convert.ToBoolean(item.Is_Kitting))
                        </td>*@
                    @*<td>
                            @Html.DisplayFor(modelItem => item.RS_Lines1.Line_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RS_Stations.Station_ID)
                        </td>*@

                    <td>
                        <a href="@Url.Action(ResourceGlobal.Edit, "PartGroup", new { id = item.Partgroup_ID })"><i class="fa fa-edit" style="color:blue"></i></a>
                        <a href="@Url.Action(ResourceGlobal.Details, "PartGroup", new { id = item.Partgroup_ID })"><i class="fa fa-fw fa-laptop" style="color:blueviolet"></i></a>
                        <a href="@Url.Action(ResourceGlobal.Delete, "PartGroup", new { id = item.Partgroup_ID })"><i class="fa fa-trash" style="color:red"></i></a>
                    </td>
                </tr>
        }
        </tbody>
    </table>
</div>
@section scripts {
    @Scripts.Render("~/Content/theme/plugins/datatables/js")
    @Styles.Render("~/Content/theme/plugins/datatables/css")
    @Scripts.Render("~/Scripts/user_datatable")
}
