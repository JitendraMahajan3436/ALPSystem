@model REIN_MES_System.Models.RS_Plants
@using REIN_MES_System.App_LocalResources;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
    var globalData = (REIN_MES_System.Models.GlobalData)ViewData["GlobalDataModel"];
}


<div class="col-md-12">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            <div class="row breakClass">
                <div class="col-md-6">
                    <div class="">
                        @Html.LabelFor(model => model.Plant_Name, new { @class = "" })<i style="color:red">*</i>

                        @Html.TextBoxFor(model => model.Plant_Name, htmlAttributes: new { @class = "form-control", @maxlength = "100", @placeholder = "Enter Plant Name" })
                        @Html.ValidationMessageFor(model => model.Plant_Name, null, new { @class = "validation_error" })

                    </div>
                </div>
                <div class="col-md-6">
                        @Html.LabelFor(model => model.Description, new { @class = "" })
                        @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control", @maxlength = "200", @placeholder = "Enter Plant Description" })
                        @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
            <div class="row breakClass">
                <div class="col-md-6">
                        @Html.LabelFor(model => model.Plant_Code_SAP, new { @class = "" })<i style="color:red">*</i>
                        @Html.TextBoxFor(model => model.Plant_Code_SAP, htmlAttributes: new { @class = "form-control text-uppercase", @maxlength = "4", @placeholder = "Enter Plant SAP Code" })
                        @Html.ValidationMessageFor(model => model.Plant_Code_SAP, null, new { @class = "validation_error" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Address, new { @class = "" })
                    @Html.TextBoxFor(model => model.Address, htmlAttributes: new { @class = "form-control", @maxlength = "200", @placeholder = "Enter Plant Address" })
                    @Html.ValidationMessageFor(model => model.Address)
                </div>
            </div>
            <div class="row breakClass">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.City, new { @class = "" })
                    @Html.TextBoxFor(model => model.City, htmlAttributes: new { @class = "form-control", @maxlength = "50", @placeholder = "Enter City Name " })
                    @Html.ValidationMessageFor(model => model.City)
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.State, new { @class = "" })
                    @Html.TextBoxFor(model => model.State, htmlAttributes: new { @class = "form-control", @maxlength = "50", @placeholder = "Enter State Name " })
                    @Html.ValidationMessageFor(model => model.State)
                </div>
            </div>
            <div class="row breakClass">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Country, new { @class = "" })
                    @Html.TextBoxFor(model => model.Country, htmlAttributes: new { @class = "form-control", @maxlength = "50", @placeholder = "Enter Country Name " })
                    @Html.ValidationMessageFor(model => model.Country)
                </div>
            </div>
                <div class="">
                    @Html.HiddenFor(model => model.Inserted_Host, new { @Value = globalData.serverIPAddress })
                    <input type="submit" value="@ResourceGlobal.Save" class="btn btn-primary" />
                    @Html.ActionLink(ResourceGlobal.Show_All, "Index", null, new { @class = "btn btn-primary" })
                </div>
        </div>
    }
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


