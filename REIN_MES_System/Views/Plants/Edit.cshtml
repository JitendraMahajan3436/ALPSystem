@model REIN_MES_System.Models.RS_Plants
@using REIN_MES_System.App_LocalResources;

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}


<div class="col-md-12">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Plant_ID)
            <div class="row breakClass">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Plant_Name, new { @class = "" })<i style="color:red">*</i>
                    @Html.TextBoxFor(model => model.Plant_Name, htmlAttributes: new { @class = "form-control", @maxlength = "100" })
                    @Html.ValidationMessageFor(model => model.Plant_Name, null, new { @class = "validation_error" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Description, new { @class = "" })
                    @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control", @maxlength = "200" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
            <div class="row breakClass">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Plant_Code_SAP, new { @class = "" })<i style="color:red">*</i>
                    @Html.TextBoxFor(model => model.Plant_Code_SAP, htmlAttributes: new { @class = "form-control text-uppercase", @maxlength = "4" })
                    @Html.ValidationMessageFor(model => model.Plant_Code_SAP, null, new { @class = "validation_error" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Address, new { @class = "" })
                    @Html.TextBoxFor(model => model.Address, htmlAttributes: new { @class = "form-control", @maxlength = "200" })
                    @Html.ValidationMessageFor(model => model.Address)
                </div>
            </div>
            <div class="row breakClass">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.City, new { @class = "" })
                    @Html.TextBoxFor(model => model.City, htmlAttributes: new { @class = "form-control", @maxlength = "50" })
                    @Html.ValidationMessageFor(model => model.City)
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.State, new { @class = "" })
                    @Html.TextBoxFor(model => model.State, htmlAttributes: new { @class = "form-control", @maxlength = "50" })
                    @Html.ValidationMessageFor(model => model.State)
                </div>
            </div>
            <div class="row breakClass">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Country, new { @class = "" })
                    @Html.TextBoxFor(model => model.Country, htmlAttributes: new { @class = "form-control", @maxlength = "50" })
                    @Html.ValidationMessageFor(model => model.Country)
                </div>
            </div>
            <br />
           
                <div class="">
                    <input type="submit" value="@ResourceGlobal.Save" class="btn btn-primary" />
                    @Html.ActionLink(ResourceGlobal.Show_All, "Index", null, new { @class = "btn btn-primary" })
                </div>
            
        </div>
    }

    @*<div>
            @Html.ActionLink("Back to List", "Index")
        </div>*@

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>