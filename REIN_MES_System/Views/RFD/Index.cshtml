                                        res += '      <td>';
                                        res += '           ' + data.Result[i].modedesc;
                                        res += '       </td>';

                                        //if (j == 1) {

                                        //    //res += '      <td style="background-color:lawngreen; font-size:15px; font-weight: 700">';
                                        //    res += '      <td style="background-color:aqua" >';
                                        //    res += '           ' + data.Result[i].Eng_Sr;
                                        //    res += '       </td>';
                                        //}
                                       // else {
                                            res += '      <td>';
                                            res += '           ' + data.Result[i].Eng_Sr;
                                            res += '       </td>';
                                       // }
                                        var IsSAP = data.Result[i].IsSAP;
                                        if (IsSAP == "Y") {

                                            //res += '      <td style="background-color:lawngreen; font-size:15px; font-weight: 700">';
                                            res += '      <td>';
