<div class="col-md-12">
    <div class="panel" style="border:1px solid darkcyan;margin-top:2%">
        <div class="panel-body">
            @Html.ValidationSummary(true)
            <div class="row">
                @*@Html.Hidden("Plant_ID")*@
                <div class="col-md-6 col-lg-6 col-sm-6">
                    @Html.Label("Station Name", new { @class = "" })
