@model REIN_MES_System.Models.RS_Roles

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}


<div class="col-md-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Role_Name, new { @class = "" })<i style="color:red">*</i>
                @Html.TextBoxFor(model => model.Role_Name, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Role_Name)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Role_Description, new { @class = "" })
                @Html.TextBoxFor(model => model.Role_Description, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Role_Description)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Sort_Order, "Sort Order", new { @class = "" })<i style="color:red">*</i>
                @Html.TextBoxFor(model => model.Sort_Order, null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sort_Order, null, new { @class = "validation_error" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Menu_ID, "Menu Names")<i style="color:red">*</i>
                @Html.DropDownListFor(model => model.Menu_ID, (IEnumerable<SelectListItem>)ViewBag.Menu_Roles, htmlAttributes: new { @class = "form-control", multiple = "true" })
                @Html.ValidationMessageFor(model => model.Menu_ID)
            </div>


            <div class="form-group">

                <input type="submit" value="Save" class="btn btn-primary" /> @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })

            </div>
        </div>
    }

    @*<div>
            @Html.ActionLink("Back to List", "Index")
        </div>*@

</div>
@*@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }*@
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/Select2scripts")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Menu_ID").select2({
                placeholder: 'Select Menu',
                allowClear: true,
            });

        });
    </script>
}
@section Styles {
    <link href="~/Content/theme/RoleMgt.css" rel="stylesheet" />
    @Styles.Render("~/Content/Select2styles")
}