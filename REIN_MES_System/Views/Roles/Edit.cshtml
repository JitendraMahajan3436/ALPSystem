@model REIN_MES_System.Models.RS_Roles
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}
<div class="col-md-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Role_ID)

            <div class="form-group">
                @Html.LabelFor(model => model.Role_Name, "Role Name", new { @class = "" })<i style="color:red">*</i>
                @Html.TextBoxFor(model => model.Role_Name, null, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                @Html.ValidationMessageFor(model => model.Role_Name, null, new { @class = "validation_error" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Role_Description, "Role Description", new { @class = "" })
                @Html.TextBoxFor(model => model.Role_Description, null, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                @Html.ValidationMessageFor(model => model.Role_Description, null, new { @class = "validation_error" })

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Sort_Order, "Sort Order", new { @class = "" })<i style="color:red">*</i>
                @Html.TextBoxFor(model => model.Sort_Order, null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sort_Order, null, new { @class = "validation_error" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Menu_ID, "Menu Names", new { @class = "" })<i style="color:red">*</i>
                @Html.DropDownListFor(model=>model.Menu_ID, null, htmlAttributes: new { @class = "form-control", multiple = "true" })
                @Html.ValidationMessageFor(model => model.Menu_ID, null, new { @class = "validation_error" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Show All", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/Select2scripts")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Menu_ID").select2({
                placeholder: 'Select Employee',
                allowClear: true,
                multiple: 'multiple',
                tags: true,
                tokenSeparators: [',', ';']
            });
         

        });
    </script>
}
@section Styles {
    <link href="~/Content/theme/RoleMgt.css" rel="stylesheet" />
    @Styles.Render("~/Content/Select2styles")
}
