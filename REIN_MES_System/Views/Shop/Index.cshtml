@model IEnumerable<REIN_MES_System.Models.RS_Shops>
@using REIN_MES_System.App_LocalResources;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<p class="position_absolute">
    @*@Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })*@
    <a href="@Url.Action("Create", "Shop")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-plus-circle"></i> @ResourceGlobal.Create_New</a>
</p>
@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="table-responsive">
    <table class="table table-bordered table-striped datatable_completes">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Shop_Name)
                </th>
                <th>
                    @Html.DisplayName("Shop Category")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Shop_SAP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RS_Plants.Plant_Name)
                </th>

                <th>
                    @Html.DisplayName(ResourceGlobal.Inserted_Date)
                </th>

                <th>

                    @Html.DisplayName(ResourceGlobal.Inserted_User_Id)
                </th>

                <th>@ResourceGlobal.Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shop_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RS_Major_Sub_Assembly.Sub_Assembly_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Shop_SAP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RS_Plants.Plant_Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Inserted_Date)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.RS_Employee.Employee_Name)
                    </td>

                    <td>
                        <a href="@Url.Action(ResourceGlobal.Edit, "Shop", new { id = item.Shop_ID })"><i class="fa fa-edit" title="Edit" style="color:blue"></i></a>
                        <a href="@Url.Action(ResourceGlobal.Details, "Shop", new { id = item.Shop_ID })"><i class="fa fa-fw fa-laptop" title="Details" style="color:blueviolet"></i></a>
                        <a href="@Url.Action(ResourceGlobal.Delete, "Shop", new { id = item.Shop_ID })"><i class="fa fa-trash" title="Delete" style="color:red"></i></a>


                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
@section scripts {
    @Scripts.Render("~/Content/theme/plugins/datatables/js")
    @Styles.Render("~/Content/theme/plugins/datatables/css")
    @Scripts.Render("~/Scripts/user_datatable")
}