@model REIN_MES_System.Models.RS_ShopsCategory
@using REIN_MES_System.App_LocalResources;
@{

    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}
<link href="~/Content/theme/plugins/select2/select2.min.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="row">

        <div class="col-md-12">


            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Shop Group Name *</label>
                            @Html.EditorFor(model => model.ShopsCategory_Name, new { htmlAttributes = new { @class = "form-control", @style = "max-width:100%" } })

                            @Html.ValidationMessageFor(model => model.ShopsCategory_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Category</label>
                            @Html.DropDownListFor(model => model.Is_Consumption, new SelectList(new List<object> { new { value = "True", text = "Consumption" }, new { value = "False", text = "Generation" } }, "value", "text", 2), new { @class = "form-control", onchange = "ContainsData()", autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.Is_Consumption, null, new { @class = "validation_error onlydigit4" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Group Order  *</label>
                            @Html.EditorFor(model => model.Sort_Order, new { htmlAttributes = new { @class = "form-control", @style = "max-width:100%" } })
                            @Html.ValidationMessageFor(model => model.Sort_Order, "", new { @class = "text-danger" })
                            @Html.Hidden("Plant_ID")
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" value="Save" class="btn btn-linkedin" />
                        @Html.ActionLink("Show All", "Index", null, htmlAttributes: new { @class = "btn btn-linkedin" })
                    </div>
                </div>
            </div>


        </div>
    </div>

}
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}