@model IEnumerable<REIN_MES_System.Models.RS_ShopsCategory>

@{
   
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}




<div class="box">
    <div class="box-header">
        <p class="position_absolute">
            @*@Html.ActionLink("Create New", "Create")*@

            <a href="@Url.Action("Create", "ShopwiseGroup")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-plus-circle"></i> Create New</a>
        </p>
    </div>
    <div class="box-body">

        <table class="table table-bordered table-striped table-condensed datatable_completes">
            <thead style="background-color:lightgrey; color:black">
                <tr>
                    @*<th>
                            @Html.DisplayName("Plant Name ")
                        </th>*@
                    <th>
                        @Html.DisplayName("Shop Group")
                    </th>
                    @*<th>
                      D
                    </th>*@
                    @*<th>
                        @Html.DisplayName("Order No.")
                    </th>*@



                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.RS_Plants.Plant_Name)
                            </td>*@

                        <td>
                            @Html.DisplayFor(modelItem => item.ShopsCategory_Name)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Sort_Order)
                        </td>*@
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Shop_SAP)
                        </td>*@



                        <td>

                            <a style="color:dodgerblue" href="@Url.Action("Edit", "ShopwiseGroup", new { id = item.ShopsCat_ID})"><i class="fa fa-edit" title="Edit"></i></a> &nbsp;|
                            @*<a style="color:dodgerblue" href="@Url.Action("Details", "Energy_Shop_Master", new { id = item.Shop_ID })"><i class="fa fa-edit" title="Details"></i></a> &nbsp;|&nbsp;*@
                            @*<a style="color:dodgerblue" href="@Url.Action("Delete", "Energy_Shop_Master", new { id = item.Shop_ID })"></a>*@
                            <a style="color:dodgerblue" data-target="#@item.ShopsCat_ID" data-toggle="modal" data-id="@item.ShopsCat_ID" onclick="deleteStart(this)"><i class="fa fa-trash-o" title="Delete"></i></a>
                            @using (Html.BeginForm("Delete", "ShopwiseGroup", new { id = item.ShopsCat_ID }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="modal fade" id="@item.ShopsCat_ID" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                                <h4 class="modal-title">Delete Confirmation</h4>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete this item?
                                            </div>
                                            <div class="modal-footer">
                                                <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                                                <input type="submit" value="Delete" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>





@section scripts {
    @Scripts.Render("~/Content/theme/plugins/datatables/js")
    @Styles.Render("~/Content/theme/plugins/datatables/css")
    @*@Styles.Render("~/Scripts/user_datatable")*@
    <script src="~/Scripts/user_datatable.js"></script>


}









