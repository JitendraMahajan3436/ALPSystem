@model IEnumerable<REIN_MES_System.Models.RS_Stations>
@using REIN_MES_System.App_LocalResources;
@using REIN_MES_System.custom_Helper;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}



<p class="position_absolute">
    @*@Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })*@
    <a href="@Url.Action("Create", "Station")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-plus-circle"></i> @ResourceGlobal.Create_New</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped datatable_completes">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Station_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Is_Buffer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Station_IP_Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Station_Host_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Is_Critical_Station)
                </th>
                <th>
                    @Html.DisplayName("Line Name")
                </th>
                <th>
                    @Html.DisplayName("Shop Name")
                </th>

                <th>@ResourceGlobal.Action</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Station_Name)
                </td>
                <td>
                    @Html.YesNo(Convert.ToBoolean( item.Is_Buffer))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Station_IP_Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Station_Host_Name)
                </td>
                <td>
                    @Html.YesNo(item.Is_Critical_Station)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.RS_Lines.Line_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RS_Shops.Shop_Name)
                </td>

                <td>
                    <a href="@Url.Action(ResourceGlobal.Edit, "Station", new { id = item.Station_ID })"><i class="fa fa-edit" title="Edit" style="color:blue"></i></a>
                    <a href="@Url.Action(ResourceGlobal.Details, "Station", new { id = item.Station_ID })"><i class="fa fa-fw fa-laptop" title="Details" style="color:blueviolet"></i></a>
                    <a href="@Url.Action(ResourceGlobal.Delete, "Station", new { id = item.Station_ID })"><i class="fa fa-trash" title="Delete" style="color:red"></i></a>

                </td>
            </tr>
        }

    </table>
</div>
@section scripts {
    @Scripts.Render("~/Content/theme/plugins/datatables/js")
    @Styles.Render("~/Content/theme/plugins/datatables/css")
    @Scripts.Render("~/Scripts/user_datatable")
}