@model IEnumerable<REIN_MES_System.Models.RS_Style_Code>
@using REIN_MES_System.App_LocalResources;
@using REIN_MES_System.custom_Helper;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

<p class="position_absolute">
    <a href="@Url.Action("Create", "StyleCode")" class="btn btn-social btn-linkedin"><i class="fa fa-fw fa-plus-circle"></i> @ResourceGlobal.Create_New</a>
</p>

<table class="table table-bordered table-striped datatable_completes">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RS_Plants.Plant_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Style_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Style_Code_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Style_Code_Description)
            </th>
            <th>@ResourceGlobal.Action</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RS_Plants.Plant_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Style_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Style_Code_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Style_Code_Description)
            </td>
            <td>
                <a href="@Url.Action("Edit", "StyleCode", new { id = item.StyleCode_ID })"><i class="fa fa-edit" title="Edit" style="color:blue"></i></a> 
                <a href="@Url.Action("Details", "StyleCode", new { id = item.StyleCode_ID })"><i class="fa fa-fw fa-laptop" title="Details" style="color:blueviolet"></i></a> 
                <a href="@Url.Action("Delete", "StyleCode", new { id = item.StyleCode_ID })"><i class="fa fa-trash" title="Delete" style="color:red"></i></a>

            </td>
        </tr>
    }

</table>

@section scripts {
    @Scripts.Render("~/Content/theme/plugins/datatables/js")
    @Styles.Render("~/Content/theme/plugins/datatables/css")
    @Scripts.Render("~/Scripts/user_datatable")
}